{%- macro RandomText(length) -%}

  {%- from _self import lipsum -%}
  {%- if not length -%}
    {%- set length = random(2) + 1 -%}
  {%- endif -%}

  {{- lipsum(length) | replace({',': '', ';': ''}) | capitalize -}}

{%- endmacro -%}


{%- macro RandomTextContent(length) -%}

  {%- from _self import lipsum -%}
  {%- if not length -%}
    {%- set length = random(36) + 1 -%}
  {%- endif -%}

  {{- lipsum(length) | capitalize -}}.

{%- endmacro -%}


{%- macro RandomTextLowercase(length) -%}

  {%- from _self import randomTxt -%}
  {{- randomTxt(length) | lower -}}

{%- endmacro -%}


